            </HBox>

            <HBox spacing="5">
                <Label text="Dirección:" />
                <TextField fx:id="direccionInputModificar" maxWidth="200" promptText="Dirección" />
            </HBox>

            <HBox spacing="5">
                <Label text="Ciudad:" />
                <TextField fx:id="ciudadInputModificar" maxWidth="100" promptText="Ciudad" />
