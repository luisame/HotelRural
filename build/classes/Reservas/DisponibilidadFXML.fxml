<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.time.*?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Reservas.DisponibilidadController" stylesheets="@DisponibilidadCCS.css">
    <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="20">
        <StackPane alignment="CENTER" VBox.vgrow="NEVER">
            <Label text="Disponibilidad de Habitaciones" styleClass="header-label"/>
        </StackPane>
        <HBox spacing="10">
            <Label text="Fecha de Inicio:" />
            <DatePicker fx:id="fechaInicio" />
            <Label text="Fecha de Fin:" />
            <DatePicker fx:id="fechaFin" />
        </HBox>
        <HBox spacing="10">
            <Label text="Número de Personas:" />
            <TextField fx:id="numeroPersonas" />
            <Button text="Buscar Disponibilidad" onAction="#buscarDisponibilidad" />
        </HBox>
        <TableView fx:id="tablaHabitacionesDisponibles" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID Habitación" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Tipo" prefWidth="200">
                    <cellValueFactory>
                        <PropertyValueFactory property="Descripcion"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Capacidad" prefWidth="100">

                    <cellValueFactory>
                        <PropertyValueFactory property="capacidad" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Estado" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="estado"/>
                    </cellValueFactory>
                </TableColumn>
               <TableColumn text="Descripción" prefWidth="350">
            <cellValueFactory>
                <PropertyValueFactory property="descripcion"/>
            </cellValueFactory>
        </TableColumn>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
